generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



type subTopics {
  title String
  subTopics String[]
}

model scienceFields {
  id        String                   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  subFields subTopics[]
}



model Book {
  id          String   @id @default(auto()) @map("_id") @test("ObjectId")
  title       String
  authors     String[]
  coverImage  String
  summary     String
  ratings     Rating[]
  subfield    String
  temarioImgs String[]
}

model Rating {
  id        String @id @default(auto()) @map("_id") @test("ObjectId")
  amazon    Float
  goodreads Float
  google    Float
}