model Topic {
  id       String  @id @map("_id") @default(auto()) @db.ObjectId
  topic    String 
  field    String
  SubField String
  books    Book[]  @relation("TopicToBooks")
}

model Book {
  id                String  @id @map("_id") @default(auto()) @db.ObjectId
  englishTitle      String  
  spanishTitle      String? 
  authors           String[] 
  spanishEdition    Boolean? 
  publicationDate   String?
  lastEdition       String?
  summary           String?
  keywords          String[]
  pages             Int?
  ratings           Rating
  originCountry     String?
  coverImage        String?
  syllabusImages    String[]
  topic             Topic?  @relation("TopicToBooks", fields: [id], references: [id])
}

type Rating {
  amazon    Float
  goodreads Float
  google    Float
}
